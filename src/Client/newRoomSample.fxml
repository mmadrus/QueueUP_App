<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.RoomController">
   <children>
      <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
      <Button fx:id="backButton" layoutX="39.0" layoutY="342.0" mnemonicParsing="false" onAction="#backToChat" prefHeight="31.0" prefWidth="100.0" text="Back" />
      <Button fx:id="createRoomButton" layoutX="420.0" layoutY="342.0" mnemonicParsing="false" onAction="#createRoom" prefHeight="31.0" prefWidth="140.0" text="Create room" />
      <TextField fx:id="roomNameField" alignment="CENTER" layoutX="230.0" layoutY="150.0" prefHeight="31.0" prefWidth="140.0" promptText="Enter name" />
      <PasswordField fx:id="roomPasswordField" alignment="CENTER" layoutX="230.0" layoutY="200.0" prefHeight="31.0" prefWidth="140.0" promptText="Password (Optional)" />
   </children>
</AnchorPane>
